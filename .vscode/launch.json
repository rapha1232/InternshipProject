{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Watch .NET Core Web API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch", // Link this to a custom task
      "program": "${workspaceFolder}/bin/Debug/net8.0/InternshipBackend.dll", // Adjust to match your project setup
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bhttp://\\S+\\b"
      }
    }
  ]
}
